<!DOCTYPE html>
<html>
<head>
  <title>Coroflex | Adding flexibility to your business</title>
  <meta name="keywords" content="change it later" />
  <meta name="description" content="change it later" />
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <link rel="stylesheet" type="text/css" href="/css/styles.css" />
</head>
<body class="<%= @controllername %>">
<div class="wrapper">
	<div class="container">
		<div class="head">
			<div class="header">
				<a href="<%=coroflex_home_path %>"><img src="/images/logo.png" class="logo" alt="coroflex" title="coroflex" /></a>
				<ul class="nav">
					<li class="home"><a href="<%=coroflex_home_path %>">Home</a></li>
					<li class="company"><a href="<%=coroflex_company_path %>">Company</a></li>
					<li class="services"><a href="<%=coroflex_services_path %>">Services</a></li>
					<li class="products"><a href="<%=coroflex_products_path %>">Products</a></li>
					<li class="contacts"><a href="<%=coroflex_contacts_path %>">Contacts</a></li>
				</ul>
			</div>
			<div class="display"><img src="/images/display.jpg" /></div>
		</div>
		<div class="content">
			<%= yield %>	
		</div>
	</div>
	<%=render :partial => "static/footer_partial" %>
</div>
</body>
</html>

